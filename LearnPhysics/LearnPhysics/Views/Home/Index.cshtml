@model LearnPhysics.Models.User

@{
    ViewData["Title"] = "Home Page";
}



@using (Html.BeginForm())
{
<fieldset class="login-fieldset" style="margin-top:180px;">

    <div class="form-group-custom">
        <label for="username">Username: </label>
        @Html.TextBoxFor(m => m.Username, new { placeholder = "Enter username", aria_describedby = "usernameHelp", @class = "form-control", @style = "border-radius: 1.25rem;" })
        @Html.ValidationMessageFor(m => m.Username)
    </div>

    <div class="form-group-custom">
        <label for="passwordInput">Password: </label>
        @Html.PasswordFor(m => m.Password, new { placeholder = "Enter password", aria_describedby = "passwordHelp", @class = "form-control", @style = "border-radius: 1.25rem;" })
        @Html.ValidationMessageFor(m => m.Password)
    </div>

    <div class="form-group-custom">
        <!-- Will need CSS styling or editing -->
        @if (@ViewBag.NotValidUser != null)
        {
            <label>@ViewBag.NotValidUser</label>
        }
    </div>

    <div class="login-button-wrapper">
        <br />
        <button type="submit" class="btn btn-primary">Login</button>
    </div>
    <div class="text-center">Haven't registered yet? <a asp-area="" asp-controller="Home" asp-action="Registration">Click here</a>.</div>
</fieldset>
}
